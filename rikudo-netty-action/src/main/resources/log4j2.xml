<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="rikudo-log" packages="">
	<properties>
		<property name="patternlayout">
			%d [%t]  %-5p %c - %msg%n
		</property>
        <property name="appFileName">/export/Logs/rikudo.practise.code.ai/netty-action.log</property>
        <property name="appFilePattern">/export/Logs/rikudo.practise.code.ai/netty-action-%i.log</property>
		<property name="globalFileName">/export/Logs/rikudo.practise.code.ai/netty-action_error.log</property>
		<property name="globalFilePattern">/export/Logs/rikudo.practise.code.ai/netty-action_error-%i.log</property>
	</properties>

    <Appenders>
        <RollingRandomAccessFile name="globalLog" fileName="${globalFileName}"
                                 filePattern="${globalFilePattern}" immediateFlush="false" >
            <PatternLayout pattern="${patternlayout}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="1G"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="nettyActionLog" fileName="${appFileName}"
                                 filePattern="${appFilePattern}" immediateFlush="false" >
            <PatternLayout pattern="${patternlayout}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1G"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="ai.code.practise.rikudo" level="info" additivity="false">
            <AppenderRef ref="nettyActionLog"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="globalLog"/>
        </Root>
    </Loggers>
</Configuration>